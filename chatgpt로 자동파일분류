import os
import shutil

# 다운로드 폴더 경로
download_folder = r'c:\Users\student\Downloads'

# 각 파일 유형별 대상 폴더
folders = {
    'images': ['.jpg', '.jpeg'],
    'data': ['.csv', '.xlsx'],
    'docs': ['.txt', '.doc', '.pdf'],
    'archive': ['.zip']
}

# 폴더 생성 및 파일 이동 함수
def move_files(src_folder, dest_folder, extensions):
    # 대상 폴더가 없으면 생성
    if not os.path.exists(dest_folder):
        os.makedirs(dest_folder)

    # 다운로드 폴더의 파일 확인 및 이동
    for file_name in os.listdir(src_folder):
        file_path = os.path.join(src_folder, file_name)
        if os.path.isfile(file_path):
            # 파일 확장자가 일치하는 경우 이동
            if any(file_name.lower().endswith(ext) for ext in extensions):
                shutil.move(file_path, os.path.join(dest_folder, file_name))
                print(f"Moved: {file_name} to {dest_folder}")

# 각 폴더로 파일 이동
for folder_name, extensions in folders.items():
    dest_path = os.path.join(download_folder, folder_name)
    move_files(download_folder, dest_path, extensions)

print("파일 이동이 완료되었습니다.")
